# Select modkey
set $mod Mod4

# Reload config
bindsym $mod+Shift+r exec "i3-msg restart"

# Set wallpaper after startup
exec_always --no-startup-id "${XDG_BIN_HOME}/setbg"

# Screenshot utility, fallback to different keysym on specific keyboards
# TODO: fix prtsc script
bindsym Print exec --no-startup-id "${XDG_BIN_HOME}/prtsc"
bindsym Menu exec --no-startup-id "${XDG_BIN_HOME}/prtsc"
bindsym Shift+Print --release exec --no-startup-id "scrot -s /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'"
bindsym Shift+Menu --release exec --no-startup-id "scrot -s /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'"

# Brightness
bindsym XF86MonBrightnessUp exec pkill -RTMIN+13 i3blocks
bindsym XF86MonBrightnessDown exec pkill -RTMIN+13 i3blocks

# TODO: change to pipewire bindings
# Pulseaudio media key bindings
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+12 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+12 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+12 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+12 i3blocks
bindcode 171 exec --no-startup-id mpc next && pkill -RTMIN+11 i3blocks 
bindcode 172 exec --no-startup-id mpc toggle && pkill -RTMIN+11 i3blocks
bindcode 173 exec --no-startup-id mpc prev && pkill -RTMIN+11 i3blocks
bindcode 174 exec --no-startup-id mpc stop && pkill -RTMIN+11 i3blocks

# Scripts execution
bindsym $mod+y exec --no-startup-id yt
bindsym $mod+s exec --no-startup-id dmenusystemdhandler

# Floating windows for specific applications
for_window [class="mpv"] floating enable
for_window [class="Blueman-manager"] floating enable
for_window [class="Blueman-manager"] move position center
for_window [class="Blueman-manager"] resize set 1250 800
for_window [class="Pavucontrol"] floating enable
for_window [class="Pavucontrol"] move position center
for_window [class="Pavucontrol"] resize set 1250 800
for_window [class="Caprine"] floating enable
for_window [class="Caprine"] move position center
for_window [class="Caprine"] resize set 1250 800
for_window [class="Signal"] floating enable
for_window [class="Signal"] move position center
for_window [class="Signal"] resize set 1250 800
for_window [class="Spotify"] floating enable
for_window [class="Spotify"] move position center
for_window [class="Spotify"] resize set 1250 800
for_window [class="discord"] floating enable
for_window [class="discord"] move position center
for_window [class="discord"] resize set 1250 800

# Program launcher
bindsym $mod+d exec --no-startup-id dmenu_run -x

# Start a terminal
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal

# Kill focused window
bindsym $mod+Shift+q kill

# Change focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Enter fullscreen mode for the focused container 
bindsym $mod+f fullscreen toggle

# Container layout [stacked, tabbed, toggle split]
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Workspaces
workspace "1" output eDP-1
workspace "2" output HDMI-2
workspace "3" output HDMI-2
workspace "4" output eDP-1
workspace "5" output eDP-1
workspace "6" output eDP-1 
workspace "7" output eDP-1
workspace "8" output eDP-1
workspace "9" output eDP-1

# Client assignment
assign [class="firefox"] 2

# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Gaps
for_window [class=".*"] border pixel 2
workspace "1" gaps inner 10
workspace "1" gaps outer 2
workspace "3" gaps inner 10
workspace "3" gaps outer 2
workspace "4" gaps inner 10
workspace "4" gaps outer 2
workspace "5" gaps inner 10
workspace "5" gaps outer 2
workspace "6" gaps inner 10
workspace "6" gaps outer 2


# Exit i3
bindsym $mod+Shift+e exec --no-startup-id i3-msg exit

# Resize window
mode "resize" {
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#Start i3bar to display a workspace bar
bar {
    #output primary
    status_command i3blocks -c $XDG_CONFIG_HOME/i3/i3blocks.conf
    tray_output primary
    mode dock
    position top
    strip_workspace_numbers no
    font pango:monospace 11
    separator_symbol " "
}
