#!/bin/sh

TMPFILE=$(mktemp) && trap 'rm -rf "$TMPFILE"' EXIT
TODO="${XDG_DATA_HOME:?}/personal/todo"

[ $# -eq 0 ] && nl -n ln < "${TODO}" && exit 0

case "$1" in
add)
	shift
	echo "$@" >> "${TODO}"
	nl -n ln < "${TODO}" ;;
rm)
	shift
	sed "$1d" < "${TODO}" > "${TMPFILE}" && mv "${TMPFILE}" "${TODO}"
	nl -n ln < "${TODO}" ;;
*)
	printf "Usage: %s add [text] | rm [n]\n" "$(basename "$0")" ;;
esac
