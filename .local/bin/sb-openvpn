#!/bin/sh

OPENVPN_DIR="${XDG_DATA_HOME:?}/openvpn"
connection=$(basename "$(pgrep openvpn -a | grep -o "[^/]*\.ovpn" || true)" .ovpn)

[ -n "${BLOCK_BUTTON}" ] && case "${BLOCK_BUTTON}" in
    1) # left click, start selected connection
       [ -n "${connection}" ] && notify-send "Active connection detected"
       [ -z "${connection}" ] && connection=$(find "${OPENVPN_DIR}" -name '*.ovpn' -exec basename {} .ovpn \; | dmenu -i -p "Select connection:") &&
       notify-send "Connecting to: ${connection}";
       sudo openvpn --config "${OPENVPN_DIR}/${connection}.ovpn" --daemon 1>/dev/null 2>&1 ;;
 
    3) # right click, stop current connection
       sudo killall openvpn && connection=off ;;
    *) ;;
esac

echo "${connection:-off}"
